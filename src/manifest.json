{
	"name": "Comment Screen",
	"version": "1.0.0",
	"description": "WebSocketで送られてきた文字をニコニコ動画風に表示します",
	"homepage_url": "https://github.com/ndac-todoroki/comment-screen-chrome",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "comment_screen@ndac-todoroki.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Comment Screen",
		"default_popup": "popup/on-off.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background/main.ts"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content_scripts/main.js"
			],
			"css": [
				"css/bundle.css",
				"css/bundle.css.map"
			]
		}
	],
	"web_accessible_resources": [
		"css/bundle.css"
	]
}